// GrokCon Prisma schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define your GrokCon models here
model Opportunity {
  id          String   @id @default(cuid())
  title       String
  description String?
  naicsCode   String
  setAside    String?
  agency      String
  postedDate  DateTime
  closeDate   DateTime?
  link        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Add more models as needed for your application
